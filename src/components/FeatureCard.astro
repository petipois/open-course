---
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "@/components/starwind/card";
import { Icon } from "astro-icon/components";
const { title, description, icon } = Astro.props;
---

<Card
    class="p-6 border-border bg-card hover:shadow-lg transition-all duration-300"
>
    <CardHeader>
        <CardTitle>
            <div
                class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10"
            >
                <Icon name={icon} class="w-6 h-6 text-purple-700" />
            </div>
              <h3 class="text-xl font-semibold text-card-foreground">
            {title}
        </h3></CardTitle
        >
    </CardHeader>
    <CardContent>
        {description}
    </CardContent>
</Card>
