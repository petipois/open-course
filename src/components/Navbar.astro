---
import { SignedIn, SignedOut, SignOutButton } from "@clerk/astro/components";
import { Button } from "@/components/starwind/button";
---

<nav class="bg-white border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Left side: Brand -->
      <div class="flex items-center space-x-3">
        <a href="/" class="flex items-center space-x-2">
          <span class="font-semibold text-gray-900 text-lg">OpenCourse</span>
        </a>
      </div>

      <!-- Center navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/instructor" class="text-gray-700 hover:text-blue-600 font-medium">
          Dashboard
        </a>
        <a href="/course" class="text-gray-700 hover:text-blue-600 font-medium">
          Course
        </a>
      </div>
      <!-- Right side -->
      <div class="flex items-center space-x-3">
        
<SignedIn>  <Button variant="ghost" href="/profile">
          Profile
        </Button>
        <SignOutButton /></SignedIn>
      <SignedOut><Button variant="ghost" href="/login">
          Sign in
        </Button></SignedOut>
      </div>
    </div>
  </div>
</nav>
