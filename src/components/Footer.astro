---
import { Icon } from "astro-icon/components";
const year = new Date().getFullYear();
const githubLink = "https://github.com/petipois";
---

<footer class="py-12 px-4 border-t border-border">
    <div class="container mx-auto max-w-6xl">
        <div
            class="flex flex-col md:flex-row justify-between items-center gap-6"
        >
            <div class="flex items-center gap-2">
                <Icon name="mdi:book" class="w-6 h-6 text-purple-700" />
                <span class="text-xl font-bold text-foreground">OpenCourse</span
                >
            </div>

            <div class="flex items-center gap-4">
                <a
                    href={githubLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors"
                >
                    <Icon name="mdi:github" class="w-5 h-5" />
                    <span class="text-sm">Open Source</span>
                </a>
                <a
                    href="https://petipois.com"
                    target="_blank"
                    class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors"
                >
                    <Icon name="mdi:mail" class="w-5 h-5" />
                    <span class="text-sm">Contact</span>
                </a>
            </div>
        </div>

        <div class="mt-8 pt-8 border-t border-border text-center">
            <p class="text-sm text-muted-foreground">
                Â© {year} OpenCourse. Open-source course platform built by <a
                    href="https://petipois.com"
                    target="_blank">Petipois</a
                >
            </p>
        </div>
    </div>
</footer>
